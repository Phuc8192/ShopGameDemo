
@{
    ViewBag.Title = "ReturnUrl";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@if (ViewBag.message == "Thanh toán thành công")
{
    <div class="text-center" style="padding:50px">
        <h2>@ViewBag.message</h2>
        <a class="btn btn-success" href="@Url.Action("Details", "HOADONs", new { id = Session["MaHDC"]})">Tiếp tục</a>
    </div>
}
else
{
    <div class="text-center" style="padding:50px">
        <h2>@ViewBag.message</h2>
        <a class="btn btn-success" href="@Url.Action("Index", "Home")">Về Trang Chủ</a>
    </div>
}

