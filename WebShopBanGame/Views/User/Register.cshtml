@model WebShopBanGame.Models.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng ký</title>
    <link href="~/Scripts/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Scripts/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="~/Scripts/style_shop_game.css">
</head>
<body class="bg-light">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                @using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4"><a href="@Url.Action("Index","Home")">SHOPGAME</a> / Đăng ký</h3></div>
                                    <div class="card-body">
                                        <form>
                                            <div class="form-floating mb-3">

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @if (ViewBag.Success != null)
                                                {
                                                    <div class="alert alert-success">@ViewBag.Success</div>
                                                }
                                            </div>
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="inputFirstName">Tên của bạn</label>
                                                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="Enter your first name">Tên đăng nhập</label>
                                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                <label for="inputEmail">Địa chỉ Email</label>
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        @Html.EditorFor(model => model.MK, new { htmlAttributes = new { @class = "form-control" } })
                                                        <label for="inputPassword">Mật khẩu</label>
                                                        @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        @Html.EditorFor(model => model.XNhanMK, new { htmlAttributes = new { @class = "form-control" } })
                                                        <label for="inputPasswordConfirm">Xác nhận mật khẩu</label>
                                                        @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid"><input type="submit" value="Đăng ký" class="btn btn-primary" /></div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small">@Html.ActionLink("Đã có tài khoản? Đi tới đăng nhập", "Login", "User")</div>
                                    </div>
                                }                                
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>       
    </div>   
</body>
</html>
