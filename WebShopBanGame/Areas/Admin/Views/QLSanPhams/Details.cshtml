@model WebShopBanGame.Models.SANPHAM
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container" style="margin-top: 30px;">
    <p>
        @Html.ActionLink("Trở lại danh sách", "Index") |
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSP })
    </p>
    <div class="row">
        <div class="col">
            <div id="showImg" class="carousel slide" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#showImg" data-slide-to="0" class="active"></li>
                    <li data-target="#showImg" data-slide-to="1"></li>
                    <li data-target="#showImg" data-slide-to="2"></li>
                    <li data-target="#showImg" data-slide-to="3"></li>
                </ul>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.Anh1" alt="Img1" style="width: 100%;">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.Anh2" alt="Img2" style="width: 100%;">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.Anh3" alt="Img3" style="width: 100%;">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.Anh4" alt="Img4" style="width: 100%;">
                    </div>
                </div>
                <a class="carousel-control-prev" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
        </div>
        <div class="col">
            <h4>@Model.TenSP</h4>
            <p><i class="fa-solid fa-tag"></i> Thể loại: Hành động</p>
            <p><i class="fa-solid fa-gamepad"></i> Nhà phát triển: @Html.DisplayFor(model => model.NHACUNGCAP.TenNCC)</p>
            <p><i class="fa-solid fa-sack-dollar"></i><span style="font-size: 25px; font-weight: 500;"> @string.Format("{0:#,##0}", Model.Gia)đ</span></p>
            <div class="row">
                <div class="col" style="padding: 0px 10px;">
                    <div class="btn btn-primary" style="text-align: center; width: 100%;"><i class="fa-solid fa-credit-card" style="color: white;"></i> Mua ngay</div>
                </div>
                <div class="col" style="padding: 0px 10px;">
                    <div class="btn btn-light text-primary" style="text-align: center; width: 100%; border: 1px solid #ddd;"><i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ</div>
                </div>
            </div>
        </div>
    </div>
    <div class="info">
        <h5 class="title" style="margin-top: 20px;">Chi tiết sản phẩm</h5>
        <hr>
        <div class="row" style="margin-top: 20px;">
            <div class="col" style="padding: 0px 50px;">
                <h4 style="text-align: center;">@Model.TieuDe</h4>
                <p style="text-align: justify; text-indent: 50px;">
                    @Model.NoiDung
                </p>
            </div>
        </div>
    </div>
</div>