@model IEnumerable<WebShopBanGame.Models.CHITIETHOADON>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>Mã HD</th>
                    <th>Hình</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaHD</td>
                        <td class="text-center"><img src="@item.SANPHAM.Anh1" width="100" height="60" /> </td>
                        <td><a target="_blank" href="@Url.Action("ChiTiet", "SanPham", new { id = item.SANPHAM.TenSP })"> @item.SANPHAM.TenSP </a> </td>
                        <td>
                            @item.SL
                        </td>
                        <td> @item.Gia.ToString("#,##0").Replace(',', '.') VNĐ </td>
                        <td> @item.ThanhTien.ToString("#,##0").Replace(',', '.') VNĐ </td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td class="text-right">Tổng số lượng:</td>
                    <td> @Model.Sum(m => m.SL) </td>
                    <td class="text-right">Tổng thành tiền:</td>
                    <td>@Model.Sum(m => m.SL * m.Gia).ToString("#,##0").Replace(',', '.') VNĐ </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<a style="padding: 30px 0px" href="@Url.Action("Index","QLHoaDons")">Về danh sách</a>