@model WebShopBanGame.Models.NHANVIEN
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container card" style="width: 55rem; padding: 30px; margin-top: 10px; margin-bottom: 10px;">
            <h3 style="margin: 20px 0px; text-align: center">TẠO NHÂN VIÊN</h3>
            <hr />
            <h5 style="margin-bottom: 10px">Thông tin cơ bản</h5>
            <div class="form-row">
                <div class="form-group col">
                    @Html.LabelFor(model => model.MaNV, "Mã nhân viên", htmlAttributes: new { @for = "inputMaNV" })
                    @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control", @id = "inputMaNV" } })
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col">
                    @Html.LabelFor(model => model.TenNV, "Tên nhân viên", htmlAttributes: new { @for = "inputTenNV" })
                    @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control", @id = "inputTenNV" } })
                    @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    @Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @for = "inputSDT" })
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @id = "inputSDT" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col">
                    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @for = "inputEmail" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                @Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @for = "inputEmail" })
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @id = "inputDiaChi" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
            <hr />
            <h5 style="margin-bottom: 10px">Tạo tài khoản</h5>
            <div class="form-row">
                <div class="form-group col">
                    @Html.LabelFor(model => model.TenDN, "Tên đăng nhập", htmlAttributes: new { @for = "inputTenDN" })
                    @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control", @id = "inputTenDN" } })
                    @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col">
                    @Html.LabelFor(model => model.MK, "Mật khẩu", htmlAttributes: new { @for = "inputMK" })
                    @Html.EditorFor(model => model.MK, new { htmlAttributes = new { @class = "form-control", @id = "inputMK", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Thêm nhân viên" class="btn btn-primary text-white" style="width: 200px; margin-top: 20px;" />
            </div>
            <div class="form-group text-center">
                @Html.ActionLink("Quay lại danh sách nhân viên", "Index")
            </div>
        </div>
    </div>
}