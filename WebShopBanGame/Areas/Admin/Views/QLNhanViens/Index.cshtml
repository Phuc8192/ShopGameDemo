@model IEnumerable<WebShopBanGame.Models.NHANVIEN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3 style="text-align: center; margin-top: 10px;">Danh Sách Nhân Viên</h3>
<p>
    @Html.ActionLink("Thêm nhân viên", "Create")
</p>
<table class="table table-hover table-sm table-bordered">
    <thead>
        <tr style="background-color: #e3f2fd;">
            <th>
                Mã NV
            </th>
            <th>
                Tên NV
            </th>
            <th>
                SĐT
            </th>
            <th>
                Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Phân Quyền
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @{
                        String pQuyen = "Nhân viên";
                        if (item.PhanQuyen == false)
                        {
                            pQuyen = "Quản lý";
                        }
                    }
                    @pQuyen
                </td>
                <td>
                    @Html.ActionLink("Xem", "Details", new { id = item.MaNV }) |
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV })
                </td>
            </tr>
                        }
    </tbody>
</table>
